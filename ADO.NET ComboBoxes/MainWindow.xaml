<Window x:Class="ADO.NET_ComboBoxes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO.NET_ComboBoxes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#1b202d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <ComboBox SelectionChanged="authorsName_SelectionChanged" PreviewMouseDown="authorsName_PreviewMouseDown" x:Name="authorsName" Width="150" Height="40" Margin="20,0,0,0" Background="#ffffff" BorderThickness="0"/>
            <ComboBox PreviewMouseDown="booksName_PreviewMouseDown" x:Name="booksName" Width="150" Height="40" Margin="60,0,0,0" Background="#ffffff"/>
            <TextBox Text="" Width="200" Height="50" Margin="60,0,0,0"/>
        </StackPanel>

    </Grid>
</Window>
